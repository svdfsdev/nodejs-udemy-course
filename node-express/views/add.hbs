<h1>Add new courses</h1>

<form action="/add" method="POST">
  
  <div class="row">
    <div class="input-field">
      <input id="title" name="title" type="text" class="validate" required>
      <label for="title">Ð¡ourse name</label>
      <span class="helper-text" data-error="Input name"></span>
    </div>
  </div>

  <div class="row">
    <div class="input-field">
      <input id="price" name="price" type="number" class="validate" required min="1">
      <label for="price">Price</label>
      <span class="helper-text" data-error="Input price"></span>
    </div>
  </div>

  <div class="row">
    <div class="input-field">
      <input id="img" name="img" type="text" class="validate" required>
      <label for="img">URL image</label>
      <span class="helper-text" data-error="Input URL"></span>
    </div>
  </div>

  <button class="btn btn-primary">Add course</button>
</form>